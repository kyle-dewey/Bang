<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:paddingTop="20dp"
    >

    <EditText
        android:id="@+id/markerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Marker Name"
        android:textSize="30dp" />


    <EditText
        android:id="@+id/markerDescriptionEditText"
        android:layout_width="252dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="142dp"
        android:ems="10"
        android:hint="Description"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/markerMGRSTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/markerName"
        android:layout_centerHorizontal="true"
        android:text="11SMS 12345 12345"
        android:textSize="25dp" />

    <RadioGroup
        android:id="@+id/radio_group_list_selector"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:background="#80000000"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageButton
            android:id="@+id/addExplosiveHazardButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".75"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="onClickAddExplosiveHazard"
            android:src="@drawable/ic_set_haz_area_24dp" />

        <View
            android:id="@+id/VerticalLine1"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#aaa" />

        <ImageButton
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".75"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="onClickSave"
            android:src="@drawable/ic_save" />

        <View
            android:id="@+id/VerticalLine2"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#aaa" />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".75"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="onClickDelete"
            android:src="@drawable/ic_clear_black_24dp" />

    </RadioGroup>

    <TextView
        android:id="@+id/NEWTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="189dp"
        android:text="NEWTextView" />

    <TextView
        android:id="@+id/PrimaryKFactorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NEWTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-189dp"
        android:text="PrimaryKFactorTextView" />

    <TextView
        android:id="@+id/SecondaryKFactorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PrimaryKFactorTextView"
        android:layout_centerHorizontal="true"
        android:text="SecondaryKFactorTextView" />

    <CheckBox
        android:id="@+id/CircleCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SecondaryKFactorTextView"
        android:layout_centerHorizontal="true"
        android:text="Plot Hazard Arcs" />


</RelativeLayout>
